{
  "name": "media-dupes",
  "productName": "media-dupes",
  "desktopName": "media-dupes.desktop",
  "version": "0.4.20200127",
  "description": "a minimal media duplicator for common media services like youtube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-debug": "electron . --enable-logging",
    "clean": "rm -rf node_modules",
    "clean-dist": "rimraf dist/*",
    "clean-modules": "rimraf  'node_modules/!(rimraf|.bin)'",
    "reinstall": "npm run clean && npm install",
    "jsdocs-delete": "rimraf docs/jsdocs/*",
    "jsdocs-create": "./node_modules/jsdoc/jsdoc.js --configure jsdoc.json --readme README.md",
    "jsdocs-update": "npm run jsdocs-delete && npm run jsdocs-create",
    "standardx": "npx standardx",
    "standardx-fix": "npx standardx --fix",
    "test": "mocha",
    "lint": "node_modules/eslint/bin/eslint.js app/js --ignore-path=.eslintignore",
    "pack-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=resources/installer/icon.icns --prune=true --out=dist",
    "pack-win": "npm run pack-win-32 && npm run pack-win-64",
    "pack-win-32": "electron-packager . media-dupes --overwrite --platform=win32 --arch=ia32 --icon=resources/installer/icon.ico --prune=true --out=dist --version-string.CompanyName=yafp --version-string.FileDescription=${productName} --version-string.ProductName=\"media-dupes\"",
    "pack-win-64": "electron-packager . media-dupes --overwrite --platform=win32 --arch=x64 --icon=resources/installer/icon.ico --prune=true --out=dist --version-string.CompanyName=yafp --version-string.FileDescription=${productName} --version-string.ProductName=\"media-dupes\"",
    "pack-linux": "npm run pack-linux-64",
    "pack-linux-64": "electron-packager . media-dupes --overwrite --platform=linux --arch=x64 --icon=resources/installer/icons/1024x1024.png --prune=true --out=dist",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win --ia32 --x64",
    "build-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yafp/media-dupes"
  },
  "bugs": {
    "url": "https://github.com/yafp/media-dupes/issues"
  },
  "contributors": [
    {
      "name": "Florian PÃ¶ck",
      "email": "fidel@yafp.de",
      "url": "https://yafp.de"
    }
  ],
  "homepage": "https://github.com/yafp/media-dupes",
  "keywords": [
    "audio",
    "download",
    "downloader",
    "dupes",
    "duplicator",
    "extractor",
    "ffmpeg",
    "media",
    "media-dupes",
    "mediathek",
    "mp3",
    "mirror",
    "stream",
    "video",
    "youtube",
    "youtube-dl"
  ],
  "author": "yafp <fidel@yafp.de>",
  "license": "GPL-3.0",
  "build": {
    "productName": "media-dupes",
    "appId": "de.yafp.media-dupes",
    "extraFiles": [
      "LICENSE",
      "README.md",
      "docs/CHANGELOG.md"
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.productivity",
      "files": [
        "!node_modules/ffmpeg-static-electron/bin/linux/*",
        "!node_modules/ffmpeg-static-electron/bin/win/*"
      ],
      "artifactName": "${productName}-${version}-mac.${ext}",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "title": "media-dupes",
      "background": "resources/installer/dmg_background.png",
      "iconSize": 80,
      "iconTextSize": 12,
      "contents": [
        {
          "x": 300,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 300,
          "y": 25,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "resources/installer/icon.ico",
      "publisherName": "yafp",
      "files": [
        "!node_modules/ffmpeg-static-electron/bin/linux/*",
        "!node_modules/ffmpeg-static-electron/bin/mac/*"
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "target": [
        "zip",
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "unicode": false,
      "artifactName": "${productName}-${version}-win-portable-${arch}.${ext}"
    },
    "nsis": {
      "unicode": false,
      "artifactName": "${productName}-${version}-win-installer-${arch}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "executableName": "media-dupes",
      "files": [
        "!node_modules/ffmpeg-static-electron/bin/win/*",
        "!node_modules/ffmpeg-static-electron/bin/mac/*"
      ],
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "description": "a minimal media duplicator for common media services like youtube",
      "category": "Network",
      "desktop": {
        "Terminal": "false",
        "Type": "Application",
        "Categories": "GTK;GNOME;Network;Utility;AudioVideo;"
      },
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "freebsd",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yafp",
        "repo": "media-dupes",
        "vPrefixedTagName": false
      }
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "docdash": "^1.2.0",
    "electron": "^7.1.10",
    "electron-builder": "^22.3.2",
    "electron-packager": "^14.2.0",
    "eslint": "^6.8.0",
    "jsdoc": "^3.6.3",
    "mocha": "^7.0.1",
    "ntl": "^5.0.0",
    "rimraf": "^3.0.0",
    "spectron": "^10.0.0",
    "standardx": "^5.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@sentry/electron": "^1.2.0",
    "about-window": "^1.13.2",
    "animate.css": "^3.7.2",
    "bootstrap": "^4.4.1",
    "classic-tetris-js": "^1.0.2",
    "custom-electron-titlebar": "^3.2.1",
    "electron-json-storage": "^4.1.8",
    "electron-log": "^4.0.4",
    "electron-unhandled": "^3.0.2",
    "electron-util": "^0.13.1",
    "ffmpeg-static-electron": "^2.0.1",
    "intro.js": "^2.9.3",
    "jquery": "^3.4.1",
    "noty": "^3.2.0-beta",
    "popper.js": "^1.16.1",
    "youtube-dl": "^3.0.1"
  },
  "standardx": {
    "ignore": [
      "/dist",
      "/docs/jsdocs",
      "/test/spec.js"
    ]
  }
}
